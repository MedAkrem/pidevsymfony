{% extends 'base.html.twig' %}

{% block content %}
    <h1>Update Sub Category</h1>
    <hr>

    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_start(formClass) }}

            {% if formClass.vars.errors|length > 0 %}
                <div class="alert alert-danger">
                    <ul>
                        {% for error in formClass.vars.errors %}
                            <li>{{ error.message }}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}

            <div class="form-group">
                {{ form_label(formClass.name) }}
                {{ form_widget(formClass.name, { 'attr': {'class': 'form-control'} }) }}
            </div>

            <div class="form-group">
                {{ form_label(formClass.category) }}
                {{ form_widget(formClass.category, { 'attr': {'class': 'form-control'} }) }}
            </div>

            <button type="submit" class="btn btn-primary">Update</button>

            {{ form_end(formClass) }}
        </div>
    </div>
{% endblock %}