{% extends 'base.html.twig' %}

{% block content %}
    <h1>Update Product</h1>
    <hr>

    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_start(formProduct) }}

            {% if form_errors(formProduct)|length > 0 %}
                <div class="alert alert-danger">
                    <ul>
                        {% for error in form_errors(formProduct) %}
                            <li>{{ error.message }}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}

            <div class="form-group">
                {{ form_label(formProduct.name) }}
                {{ form_widget(formProduct.name, { 'attr': {'class': 'form-control'} }) }}
            </div>




            <!-- Add other fields for updating the product here -->



            {{ form_end(formProduct) }}
        </div>
    </div>
{% endblock %}
